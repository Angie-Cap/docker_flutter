{
    "name": "GUI Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--env",
        "DISPLAY=${env:DISPLAY}",
        "--volume",
        "/tmp/.X11-unix:/tmp/.X11-unix",
        //        "--device",
        //        "/dev/dri",
        "-p",
        "9100:9100"
    ],
    "forwardPorts": [
        9100
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "dart.flutterSdkPath": "/opt/flutter"
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "Dart-Code.dart-code",
                "Dart-Code.flutter"
            ]
        }
    }
}